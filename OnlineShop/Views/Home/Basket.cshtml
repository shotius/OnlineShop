@model List<ShoesListDTO>
@{
    ViewData["Title"] = "Basket";
}

<h1>Basket</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Picture</td>
            <td>Country</td>
            <td>Price</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.Picture" alt="shoes pic" style="width: 200px;" /></td>
                    @*<td>picture</td>*@
                    @*<td>picture</td>
                    <td>picture</td>*@
                    <td>@item.ProductionCountry</td>
                    <td>@item.Price</td>
                </tr>
            }
        }
    </tbody>

</table>



