@model ShoesListVM
@{
    ViewData["Title"] = "Home Page";
}



<div class="row">
    @foreach (var item in Model.Shoes)
    {
        <div class="col 4 mb-4">
            <div class="card" style="width: 18rem;">
                <img src=@item.Picture height="250" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Shoes Description</h5>
                    <p><strong>Brand    : </strong>@item.Brand</p>
                    <p><strong>Color: </strong>@item.Color</p>
                    <p>made in @item.ProductionCountry</p>
                    <a asp-action="ShoesDetails" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>











